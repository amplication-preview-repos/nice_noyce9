datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  age       Int?
  createdAt DateTime @default(now())
  gender    String?
  id        String   @id @default(cuid())
  interests String?
  location  String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Match {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  messages  Message[]
  updatedAt DateTime  @updatedAt
  user1     String?
  user2     String?
}

model Message {
  content   String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  match     Match?    @relation(fields: [matchId], references: [id])
  matchId   String?
  timestamp DateTime?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  bio            String?
  createdAt      DateTime  @default(now())
  email          String?   @unique
  firstName      String?
  id             String    @id @default(cuid())
  lastName       String?
  messages       Message[]
  password       String
  profilePicture Json?
  profiles       Profile[]
  roles          Json
  updatedAt      DateTime  @updatedAt
  username       String    @unique
}
